<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:textSize">@dimen/txtSize_16sp</item>
        <item name="android:padding">@dimen/padding_15dp</item>
    </style>

    <style name="radioBtnStyle">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtSize_15sp</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>